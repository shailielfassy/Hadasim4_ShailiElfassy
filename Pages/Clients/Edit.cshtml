@page
@model Hadasim4._0Ex1.Pages.Clients.EditModel
@{
    ViewData["Title"] = "Update " + @Model.clientInformation.id;
}

<br>

<style>
    /* CSS code to define styles for a profile picture */
    .profile-section {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-picture {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background-color: #ccc;
        overflow: hidden;
        margin-right: 20px;
        cursor: pointer;
    }

        .profile-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Hide the input file */
    input[type="file"] {
        display: none;
    }
</style>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@Model.clientInformation.id" />

    <div class="profile-section">
        <div>
            <h3>@Model.clientInformation.fullName  </h3>
            <h4>@Model.clientInformation.id</h4>
        </div>
        <label for="profile-picture-upload" class="profile-picture" title="Click to upload image">
            <!-- Display uploaded image or placeholder image -->
            @if (!string.IsNullOrEmpty(Model.image.img))
            {
                <img src="data:image/jpeg;base64,@Model.image.img" >
            }
        </label>
        <div>
            <input type="file" name="profilePicture" id="profile-picture-upload" accept="image/*">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="fullName" value="@Model.clientInformation.fullName" @(ViewData["NameErrorStyle"] ?? "") />
            <span class="text-danger">@ViewData["NameErrorMessage"]</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">City</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="city" value="@Model.clientInformation.city" style="@ViewData["CityErrorStyle"]" />
            <span class="text-danger">@ViewData["CityErrorMessage"]</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Street</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="street" value="@Model.clientInformation.street" style="@ViewData["StreetErrorStyle"]" />
            <span class="text-danger">@ViewData["StreetErrorMessage"]</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Date of birth</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="dateOfBirth" value="@Model.clientInformation.dateOfBirth" readonly />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Phone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.clientInformation.phone" style="@ViewData["PhoneErrorStyle"]" />
            <span class="text-danger">@ViewData["phoneErrorMessage"]</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Mobile phone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="mobilePhone" value="@Model.clientInformation.mobilePhone" style="@ViewData["MobilePhoneErrorStyle"]" />
            <span class="text-danger">@ViewData["MobilePhoneErrorMessage"]</span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Vaccination 1 date</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="vaccination1Date" value="@Model.covidInformation.vaccination1Date" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Vaccination 1 manufacturer </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="vaccination1Manufacturer" value="@Model.covidInformation.vaccination1Manufacturer" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Vaccination 2 date</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="vaccination2Date" value="@Model.covidInformation.vaccination2Date" style="@ViewData["Vaccination2DateErrorStyle"]" />
            <span class="text-danger">@ViewData["Vaccination2DateErrorMessage"]</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Vaccination 2 manufacturer </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="vaccination2Manufacturer" value="@Model.covidInformation.vaccination2Manufacturer" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Vaccination 3 date</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="vaccination3Date" value="@Model.covidInformation.vaccination3Date" style="@ViewData["Vvaccination3DateErrorStyle"]" />
            <span class="text-danger">@ViewData["Vaccination3DateErrorMessage"]</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Vaccination 3 manufacturer </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="vaccination3Manufacturer" value="@Model.covidInformation.vaccination3Manufacturer" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Vaccination 4 date</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="vaccination4Date" value="@Model.covidInformation.vaccination4Date" style="@ViewData["Vaccination4DateErrorStyle"]" />
            <span class="text-danger">@ViewData["Vaccination4DateErrorMessage"]</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Vaccination 4 manufacturer </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="vaccination4Manufacturer" value="@Model.covidInformation.vaccination4Manufacturer" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Positive test date</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="positiveTestDate" value="@Model.covidInformation.positiveTestDate" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Recovery date</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="recoveryDate" value="@Model.covidInformation.recoveryDate" style="@ViewData["RecoveryDateErrorStyle"]" />
            <span class="text-danger">@ViewData["RecoveryDateErrorMessage"]</span>
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="row sm-9">
                <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='button-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="offset-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Clients/ClientList" role="button">Cancel</a>
        </div>
    </div>
</form>
